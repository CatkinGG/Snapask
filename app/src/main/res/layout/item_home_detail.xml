<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/cardview_shadow_start_color">

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_company_text"
        app:layout_constraintStart_toEndOf="@+id/tv_company_text"
        app:layout_constraintTop_toTopOf="@+id/tv_company_text"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_email_text"
        app:layout_constraintStart_toEndOf="@+id/tv_email_text"
        app:layout_constraintTop_toTopOf="@+id/tv_email_text"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_location_text"
        app:layout_constraintStart_toEndOf="@+id/tv_location_text"
        app:layout_constraintTop_toTopOf="@+id/tv_location_text"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_email_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/e_mail"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_location_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/location"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_email_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_company_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/company"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_location_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="-"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.5"
        tool:text="NAME" />

    <TextView
        android:id="@+id/tv_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="-"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_full_name"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.5"
        tool:text="bio" />

    <TextView
        android:id="@+id/tv_hirable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary"
        android:padding="10dp"
        android:text="@string/open_to_work"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tool:text="OPENTOWORK" />


</androidx.constraintlayout.widget.ConstraintLayout>